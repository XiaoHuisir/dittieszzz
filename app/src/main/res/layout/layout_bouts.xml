<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/line_bouts"
    android:visibility="gone">

    <ImageView
        android:id="@+id/imag_v"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imag_v"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:text="V1.1"
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="26dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_User_Agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_agreement"
            android:textColor="@color/agreement"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_Areement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bouts_agreement"
            android:textColor="@color/agreement"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>
