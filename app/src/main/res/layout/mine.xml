<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:orientation="vertical">

    <View
        android:layout_marginTop="34dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/rect"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/fragment_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_myCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="11dp"
            android:text="@string/mycollection"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:background="@color/gray_g" />

        <TextView
            android:id="@+id/tv_offlineDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="11dp"
            android:text="@string/offlinedownload"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:background="@color/gray_g" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="11dp"
            android:text="@string/feedback"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:background="@color/gray_g" />

        <TextView
            android:id="@+id/tv_bouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="11dp"
            android:text="@string/bouts"
            android:textColor="@color/black"
            android:textSize="23sp" />


    </LinearLayout>
</LinearLayout>